<%= form_with(model: @client_account, local: true) do |form| %>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :full_name, class: "form-label" %>
        <%= form.text_field :full_name, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :address_1, class: "form-label" %>
        <%= form.text_field :address_1, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :address_2, class: "form-label" %>
        <%= form.text_field :address_2, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :city, class: "form-label" %>
        <%= form.text_field :city, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :state, class: "form-label" %>
        <%= form.text_field :state, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :postcode, class: "form-label" %>
        <%= form.text_field :postcode, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :country_region, class: "form-label" %>
        <%= form.text_field :country_region, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :phone, class: "form-label" %>
        <%= form.text_field :phone, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="mb-3">
    <%= form.label :alias_organizations, "Alias Organizations", class: "form-label" %>
    <%= form.text_area :alias_organizations, class: "form-control", rows: 5, placeholder: "Enter each organization name on a new line without addresses" %>
  </div>
  <div class="mb-3">
    <%= form.label :branch_shortcode, class: "form-label" %>
    <%= form.text_field :branch_shortcode, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>